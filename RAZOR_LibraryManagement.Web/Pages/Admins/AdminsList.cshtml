@page
@model RAZOR_LibraryManagement.Web.Pages.Admins.AdminsListModel
@using RAZOR_LibraryManagement.Lang.Admins
@{
    ViewData["Title"] = "Admins list";
}

<h1 class="text-dark mb-3">@AdminsList.Title</h1>

<div class="container">
    <partial name="_Notification" />
    <table class="table table-hover">
        <thead>
            <tr>
                <th>
                    @AdminsList.UserName
                </th>
                <th>
                    @AdminsList.Email
                </th>
                <th>
                    @AdminsList.Role
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var admin in Model.vmAdminUserList)
            {
                <tr>
                    <td>@admin.UserName</td>
                    <td>@admin.Email</td>
                    <td>@admin.Role</td>
                </tr>
            }
        </tbody>
    </table>
</div>

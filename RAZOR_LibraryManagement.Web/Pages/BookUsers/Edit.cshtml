@page "{id:int}"
@model RAZOR_LibraryManagement.Web.Pages.BookUsers.EditModel
@using RAZOR_LibraryManagement.Lang.BookUser
@{
    ViewData["Title"] = "Return book from user";

}

<div class="container mx-auto">
    <div class="row justify-content-center">
        <div class="clo-12 col-lg-6">
            <form method="post">
                <div class="text-center mb-3">
                    <h1 class="display-4 mb-3">@BookUserEdit.pTitle</h1>
                    <partial name="_Notification" />
                    <p>@BookUserEdit.p1 TITLE</p>
                    <p>@BookUserEdit.p2 USERNAME @BookUserEdit.p3</p>
                    <p>@BookUserEdit.p4</p>
                </div>
                <div class="d-flex list-group-horizontal align-content-around">
                    <button class="btn btn-success" type="submit">@BookUserEdit.btnReturn</button>
                    <a class="btn btn-info" href="/bookusers/list">@BookUserEdit.btnCancel</a>
                </div>
            </form>
        </div>
    </div>
</div>
@page
@model RAZOR_LibraryManagement.Web.Pages.Books.ListModel
@{
}

<div class="container">
    <table class="table table-hover">
        <thead>
            <tr>
                <th>
                    Title
                </th>
                <th>
                    Author
                </th>
                <th>
                    Actions
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var book in Model.vmBookIndexList)
            {
                <tr>
                    <td>@book.Title</td>
                    <td>@book.Author</td>
                    <td class="d-flex">
                        <a href="/Books/Details/@book.Id"><i class="bi bi-book btn-outline-success"></i></a>
                        <div>
                            @if (book.IsLoanable)
                            {
                                <i class="bi bi-check-lg btn-outline-success mx-3"></i>
                            }
                            else
                            {
                                <i class="bi bi-x-lg btn-outline-danger mx-3"></i>
                            }
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@page
@model RAZOR_LibraryManagement.Web.Pages.Books.ListModel
@{ 
}

<div class="container">
    <table class="table table-hover">
        <thead>
            <tr>
                <th>
                    Title
                </th>
                <th>
                    Author
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var book in Model.vmBookIndexList)
            {
                <tr>
                    <td>@book.Title</td>
                    <td>@book.Author</td>
                    <td><a href="/Books/Details/@book.Id"><i class="bi bi-book"></i></a></td>
                </tr>
            }
        </tbody>
    </table>
</div>

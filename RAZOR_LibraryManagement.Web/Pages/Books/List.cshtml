@page
@model RAZOR_LibraryManagement.Web.Pages.Books.ListModel
@using RAZOR_LibraryManagement.Lang.Book
@{
    ViewData["Title"] = "Books list";
}

<div class="container">
    <h1 class="text-dark mb-3">@BooksList.Title</h1>
    <table class="table table-hover">
        <thead>
            <tr>
                <th>
                    @BooksList.BookTitle 
                </th>
                <th>
                    @BooksList.BookAuthor 
                </th>
                <th>
                    @BooksList.Actions 
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var book in Model.vmBookIndexList)
            {
                <tr>
                    <td>@book.Title</td>
                    <td>@book.Author</td>
                    <td class="d-flex">
                        <a href="/Books/Details/@book.Id"><i class="bi bi-book btn-outline-success"></i></a>
                        <div>
                            @if (book.IsBorrowable)
                            {
                                <i class="bi bi-check-lg btn-outline-success mx-3"></i>
                            }
                            else
                            {
                                <i class="bi bi-x-lg btn-outline-danger mx-3"></i>
                            }
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@page
@model RAZOR_LibraryManagement.Web.Pages.Categories.ListModel
@{
    ViewData["Title"] = "Categories list";
}

<h1 class="text-dark mb-3">Categories list</h1> @* <-- TODO link from resource file*@

<div class="container">
    <table class="table table-hover">
        <thead>
            <tr>
                <th>
                    Category name
                </th>
                <th>
                    Is active?
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var category in Model.vmCategoryIndexList)
            {
                <tr>
                    <td>@category.Name</td>
                    <td>@category.IsActive</td>
                </tr>
            }
        </tbody>
    </table>
</div>
